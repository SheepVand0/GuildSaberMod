<horizontal ignore-layout="true" pref-height="20" xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
	<vertical pref-width="8" pad="2" spacing="2" id="ScopesLayout" bg="round-rect-panel" bg-color="#FFFFFF84">

		<clickable-image src='#GlobalIcon' id='Global' pref-height='~IconHeight' preserve-aspect='true' on-click='GlobalClick'></clickable-image>

		<clickable-image src='#PlayerIcon' id='Around' pref-height='~IconHeight' preserve-aspect='true' on-click='AroundClick'></clickable-image>

		<clickable-image src='#LocationIcon' id='Country' pref-height='~IconHeight' preserve-aspect='true' on-click='LocationClick'></clickable-image>

	</vertical>
</horizontal>