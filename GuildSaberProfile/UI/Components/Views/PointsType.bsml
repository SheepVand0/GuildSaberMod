<clickable-text font-size="2" align="Center" id="PointsText" on-click="OnTextClick" xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'
	>
	<modal id='PointsSelectorModal' size-delta-x='60' size-delta-y='20' hide-event='HideModal'>
		<vertical vertical-fit='PreferredSize' child-align='MiddleCenter'>
			<dropdown-list-setting anchor-pos-x='0' preferred-width='5' choices='DefaultPoints' id='PointsDropdown' text='' value='SelectedPoints' on-change='OnPointsSelected'/>
			<button text='Hide' event-click='HideModal'/>
		</vertical>
	</modal>
</clickable-text>
